	IN 10H
	
	LXI B,03E8H
START:
	MVI D,00H ;counter
WAIT:
	LDA 2000H
	RRC
	JNC WAIT ;lsb check
	RRC
	RRC
	RRC
	ANI 0FH ;upper boundary
	CMP D
	JZ DOWN
	JC DOWN
	MOV A,D
	CMA
	STA 3000H
	CMA
	CALL DELB
	INR D
	JMP WAIT

DOWN:
	MOV A,D
	CMA
	STA 3000H
	CMA
	CALL DELB
	DCR D
WAIT2:
	LDA 2000H
	RRC 
	JNC WAIT2
	RRC
	RRC
	RRC
	MOV A,D
	CPI FFH
	JZ START
	JMP DOWN

HLT
END

